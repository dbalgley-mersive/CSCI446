= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :password
    %br/
    = f.text_field :password
  .field
    = f.label :firstName
    %br/
    = f.text_field :firstName
  .field
    = f.label :lastName
    %br/
    = f.text_field :lastName
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :imagePath
    %br/
    = f.text_field :imagePath
  .field
    = f.label :role
    %br/
    = f.text_field :role
  .field
    = f.label :numGames
    %br/
    = f.number_field :numGames
  .actions
    = f.submit