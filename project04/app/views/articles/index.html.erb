<h1>Articl.es</h1>


<table>
  <tr class="list_description">
    <th>Title</th>
    <th>Author Name</th>
    <th>Body</th>
    <th>Creation Date</th>
  </tr>
</table>


<div style="overflow:scroll; height:490px">
<table>

<% @articles.each do |article| %>

  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

    <td><%= article.title %></td>
    <td><%= article.author_name %></td>
    <td><%= article.body %></td>
    <td><%= article.creation_date %></td>


    <td class="list_actions">
      <%= link_to(image_tag("book_go.png", :border => 0), article) %>
      <%= link_to(image_tag("book_edit.png", :border => 0), edit_article_path(article)) %>
      <%= link_to(image_tag("bin.png", :border => 0), article, confirm: 'Are you sure you wish to delete this article?', method: :delete) %> 
    </td>
  </tr>

<% end %>
</table>
</div>
<br />

<%= link_to 'New Article', new_article_path %>
